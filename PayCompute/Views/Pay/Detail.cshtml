@model PaymentRecordDetailViewModel

@{ ViewBag.Title = "Computation Detail"; }

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Payroll List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Pay Computation Detail</li>
                </ol>
            </nav><br /><br />

            <form>

                <div class="form-row">
                    <div class="form-group col-md-1 font-weight-bold">
                        <label asp-for="FullName"></label>
                    </div>

                    <div class="form-group col-md-3 font-italic font-weight-bolder">
                        <input asp-for="FullName" class="form-control" readonly style="background-color: #293043" />
                    </div>

                    <div class="form-group col-md-2"></div>

                    <div class="form-group col-md-1">
                        <label asp-for="NiNo"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="NiNo" readonly style="background-color: #293043" class="form-control" />
                    </div>

                </div><br /><br />

                <h3>Date and Hours</h3>
                <hr style="background-color:crimson" />

                <div class="form-row">

                    <div class="form-group col-md-1">
                        <label asp-for="PayMonth"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="PayMonth" readonly style="background-color: #293043" class="form-control" />
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="Year"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="Year" readonly style="background-color: #293043" class="form-control" />
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="PayDate"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="PayDate" readonly style="background-color: #293043" class="form-control" />
                    </div>

                </div>


                <div class="form-row">

                    <div class="form-group col-md-1">
                        <label asp-for="HourlyRate"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="HourlyRate" readonly style="background-color: #293043" class="form-control" />
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="HoursWorked"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="HoursWorked" readonly style="background-color: #293043" class="form-control" />
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="ContractualHours"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="ContractualHours" readonly style="background-color: #293043" class="form-control" />
                    </div>

                </div>


                <div class="form-row">

                    <div class="col-md-4"></div>

                    <div class="form-group col-md-1">
                        <label asp-for="OvertimeRate"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="OvertimeRate" readonly style="background-color: #293043" class="form-control" />
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="OvertimeHours"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="OvertimeHours" readonly style="background-color: #293043" class="form-control" />
                    </div>

                </div><br />

                <h3>Deductions</h3>
                <hr style="background-color:crimson" />

                <div class="form-row">


                    <div class="form-group col-md-1">
                        <label asp-for="TaxCode"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="TaxCode" readonly style="background-color: #293043" class="form-control" />
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="Tax"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="Tax" readonly style="background-color: #293043" class="form-control" />
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="NIC"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="NIC" readonly style="background-color: #293043" class="form-control" />
                    </div>

                </div>



                <div class="form-row">

                    <div class="form-group col-md-1">
                        <label asp-for="SLC"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="SLC" readonly style="background-color: #293043" class="form-control" />
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="UnionFee"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="UnionFee" readonly style="background-color: #293043" class="form-control" />
                    </div>

                </div>


                <div class="form-row">


                    <div class="form-group col-md-8"></div>

                    <div class="form-group col-md-1 font-weight-bold">
                        <label asp-for="TotalDeduction"></label>
                    </div>

                    <div class="form-group col-md-3 font-weight-bolder">
                        <input asp-for="TotalDeduction" readonly style="background-color: #293043" class="form-control" />
                    </div>

                </div>

                <h3>Earnings</h3>
                <hr style="background-color:crimson" />


                <div class="form-row">

                    <div class="form-group col-md-1">
                        <label asp-for="OvertimeEarning"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="OvertimeEarning" readonly style="background-color: #293043" class="form-control" />
                    </div>

                    <div class="form-group col-md-1 font-weight-bold">
                        <label asp-for="TotalEarnings"></label>
                    </div>

                    <div class="form-group col-md-3 font-weight-bolder">
                        <input asp-for="TotalEarnings" readonly style="background-color: #293043" class="form-control" />
                    </div>

                </div>



                <div class="form-row">

                    <div class="form-group col-md-8">

                    </div>

                    <div class="form-group col-md-1 font-weight-bold">
                        <label asp-for="NetPayment"></label>
                    </div>

                    <div class="form-group col-md-3 font-weight-bolder">
                        <input asp-for="NetPayment" readonly style="background-color: #293043" class="form-control" />
                    </div>

                </div><br /><br />


                <div class="form-group">

                    <a asp-action="index" class="btn btn-rounded btn-primary float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back to Pay List</a>
                    <br />
                    <br />
                    <br />

                </div>

            </form>
        </div>
    </div>
</div>
