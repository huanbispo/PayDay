@model PaymentRecordCreateViewModel

@{ ViewBag.Title = "Pay Computation"; }

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Payroll List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Pay Computation</li>
                </ol>
            </nav><br /><br />

            <form method="post" enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="EmployeeId"></label>
                    <select class="form-control" asp-for="EmployeeId" asp-items="ViewBag.employees">
                        <option selected>--- Select Employee ---</option>
                    </select>

                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div><br /><br /><br />

                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="PayMonth"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="PayMonth" class="form-control">
                            <option selected>--- Select a Month ---</option>
                            @for (int i = 0; i < 12; i++)
                            {
                                <option>@DateTime.MinValue.AddMonths(i).ToString("MMMM").ToUpper()</option>
                            }

                        </select>
                        <span asp-validation-for="PayMonth" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="TaxYearId"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <select asp-for="TaxYearId" asp-items="ViewBag.taxYears" class="form-control">
                            <option selected>--- Select Tax Year ---</option>
                        </select>
                        <span asp-validation-for="TaxYearId" class="text-danger"></span>
                    </div>


                    <div class="form-group col-md-1">
                        <label asp-for="PayDate"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="PayDate" class="form-control" />
                        <span asp-validation-for="PayDate" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-row">

                    <div class="form-group col-md-1">
                        <label asp-for="HourlyRate"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="HourlyRate" placeholder="0,00" id="currency" class="form-control" />
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="HoursWorked"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="HoursWorked" type="number" class="form-control" />
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>


                    <div class="form-group col-md-1">
                        <label asp-for="ContractualHours"></label>
                    </div>

                    <div class="form-group col-md-3">
                        <input asp-for="ContractualHours" class="form-control" />
                        <span asp-validation-for="ContractualHours" class="text-danger"></span>
                    </div>


                </div><br /><br />

                <div class="form-group">

                    <button type="submit" class="btn btn-rounded btn-success float-left"><i class="fas fa-calculator" style="margin-right:0.7em"></i>Compute & Save</button>
                    <a asp-action="index" class="btn btn-rounded btn-primary float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back to Pay List</a>
                    <br />
                    <br />
                    <br />

                </div>
            </form>
        </div>
    </div>
</div>
